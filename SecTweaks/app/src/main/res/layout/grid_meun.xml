<ScrollView android:id="@+id/sv_index"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="?MainwindowBG"
    android:scrollbars="none"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/grid_mode"
        android:orientation="vertical" >
        <android.support.v7.widget.CardView    android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            card_view:cardCornerRadius="@dimen/card_view_radius"
            card_view:cardElevation="@dimen/shadow_height"
            card_view:cardUseCompatPadding="true"
            card_view:cardBackgroundColor = "?attr/cardBackgroundColor"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ui_title"
                    android:paddingStart="16dp"
                    android:textSize="@dimen/grid_title_size"
                    android:background="?cardBackgroundheadColor"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="?cardtitle"
                    android:layout_marginBottom="15dp"/>
                <com.leo.salt.ui.LineGridView
                    android:id="@+id/grid_statusbar"
                    android:layoutAnimation="@anim/grid_layout_animation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:horizontalSpacing="10dp"
                    android:verticalSpacing="10dp"
                    android:numColumns="4"
                    android:gravity="center"
                    android:paddingBottom="10dp"
                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>

	 <android.support.v7.widget.CardView    android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            card_view:cardCornerRadius="@dimen/card_view_radius"
            card_view:cardElevation="@dimen/shadow_height"
            card_view:cardUseCompatPadding="true"
            card_view:cardBackgroundColor = "?attr/cardBackgroundColor"
     >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/grid_title_size"
                        android:text="@string/pulldown_title"
                        android:id="@+id/notificationbar_bar"
                        android:paddingStart="16dp"
                        android:background="?cardBackgroundheadColor"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="?cardtitle"
                        android:layout_marginBottom="15dp"/>


                <com.leo.salt.ui.LineGridView
                    android:id="@+id/grid_pulldown"
                    android:layoutAnimation="@anim/grid_layout_animation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:horizontalSpacing="10dp"
                    android:verticalSpacing="10dp"
                    android:numColumns="4"
                    android:gravity="center"
                    android:paddingBottom="10dp"
                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView    android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            card_view:cardCornerRadius="@dimen/card_view_radius"
            card_view:cardElevation="@dimen/shadow_height"
            card_view:cardUseCompatPadding="true"
            card_view:cardBackgroundColor = "?attr/cardBackgroundColor"
           >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/lock_title"
                    android:paddingStart="16dp"
                    android:textSize="@dimen/grid_title_size"
                    android:background="?cardBackgroundheadColor"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="?cardtitle"
                    android:layout_marginBottom="15dp"/>

                <com.leo.salt.ui.LineGridView
                    android:id="@+id/grid_keyguard"
                    android:layoutAnimation="@anim/grid_layout_animation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:horizontalSpacing="10dp"
                    android:verticalSpacing="10dp"
                    android:numColumns="4"
                    android:gravity="center"
                    android:paddingBottom="10dp"
                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>
	        <android.support.v7.widget.CardView    android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            card_view:cardCornerRadius="@dimen/card_view_radius"
            card_view:cardElevation="@dimen/shadow_height"
            card_view:cardUseCompatPadding="true"
            card_view:cardBackgroundColor = "?attr/cardBackgroundColor">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/keys_title"
                    android:paddingStart="16dp"
                    android:textSize="@dimen/grid_title_size"
                    android:background="?cardBackgroundheadColor"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="?cardtitle"
                    android:layout_marginBottom="15dp"/>

                <com.leo.salt.ui.LineGridView
                    android:id="@+id/grid_keys"
                    android:layoutAnimation="@anim/grid_layout_animation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:horizontalSpacing="10dp"
                    android:verticalSpacing="10dp"
                    android:numColumns="4"
                    android:gravity="center"
                    android:paddingBottom="10dp"
                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>      
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/list_mode"
        android:orientation="vertical" >

        <android.support.v7.widget.CardView    android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            card_view:cardBackgroundColor = "?attr/cardBackgroundColor"
            card_view:cardCornerRadius="@dimen/card_view_radius"
            card_view:cardElevation="@dimen/shadow_height"
            card_view:cardUseCompatPadding="true"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/ui_title"
                        android:paddingStart="16dp"
                        android:textSize="@dimen/grid_title_size"
                        android:background="?cardBackgroundheadColor"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="?cardtitle"
                        android:layout_marginBottom="1dp" />
                <com.leo.salt.ui.LineGridView
                    android:id="@+id/list_grid_statusbar"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:verticalSpacing="2dp"
                    android:horizontalSpacing="2dp"
                    android:layoutAnimation="@anim/grid_layout_animation"
                    android:numColumns="1"
                    android:paddingBottom="15dp"
                 />
            </LinearLayout>
        </android.support.v7.widget.CardView>
 <android.support.v7.widget.CardView    android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            card_view:cardCornerRadius="@dimen/card_view_radius"
            card_view:cardElevation="@dimen/shadow_height"
            card_view:cardUseCompatPadding="true"
            card_view:cardBackgroundColor = "?attr/cardBackgroundColor"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/pulldown_title"
                        android:paddingStart="16dp"
                        android:textSize="@dimen/grid_title_size"
                        android:background="?cardBackgroundheadColor"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="?cardtitle"
                        android:layout_marginBottom="15dp"/>
                <com.leo.salt.ui.LineGridView
                    android:id="@+id/list_grid_pulldown"
                    android:layoutAnimation="@anim/grid_layout_animation"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:horizontalSpacing="2dp"
                    android:verticalSpacing="2dp"
                    android:numColumns="1"
                    android:gravity="center"
                    android:paddingBottom="15dp"
                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView    android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            card_view:cardCornerRadius="@dimen/card_view_radius"
            card_view:cardElevation="@dimen/shadow_height"
            card_view:cardUseCompatPadding="true"
            card_view:cardBackgroundColor = "?attr/cardBackgroundColor"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/lock_title"
                        android:paddingStart="16dp"
                        android:textSize="@dimen/grid_title_size"
                        android:background="?cardBackgroundheadColor"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="?cardtitle"
                        android:layout_marginBottom="15dp"/>
                <com.leo.salt.ui.LineGridView
                    android:id="@+id/list_grid_keyguard"
                    android:layoutAnimation="@anim/grid_layout_animation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:horizontalSpacing="2dp"
                    android:verticalSpacing="2dp"
                    android:numColumns="1"
                    android:gravity="center"
                    android:paddingBottom="15dp"
                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>
     <android.support.v7.widget.CardView    android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            card_view:cardCornerRadius="@dimen/card_view_radius"
            card_view:cardElevation="@dimen/shadow_height"
            card_view:cardUseCompatPadding="true"
            card_view:cardBackgroundColor = "?attr/cardBackgroundColor">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/keys_title"
                    android:paddingStart="16dp"
                    android:textSize="@dimen/grid_title_size"

                    android:background="?cardBackgroundheadColor"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="?cardtitle"
                    android:layout_marginBottom="15dp"/>

                <com.leo.salt.ui.LineGridView
                    android:id="@+id/list_grid_keys"
                    android:layoutAnimation="@anim/grid_layout_animation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:horizontalSpacing="2dp"
                    android:verticalSpacing="2dp"
                    android:numColumns="1"
                    android:gravity="center"
                    android:paddingBottom="15dp"
                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>
	    </LinearLayout>
    </LinearLayout>
</ScrollView>