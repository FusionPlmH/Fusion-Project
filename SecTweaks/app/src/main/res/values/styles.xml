<resources >

    <style name="LeoTweaksTheme" parent="AppTheme" />
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:colorBackground">@color/window_bg</item>
        <item name="android:listDivider">@color/window_bg</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:dialogTheme">@style/DialogStyleLight</item>
        <item name="android:alertDialogTheme">@style/DialogStyleLight</item>
        <item name="android:popupMenuStyle">@android:style/Widget.DeviceDefault.Light.PopupMenu</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>
    <style name="AppBarLight" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="DialogTitleStyle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title" >
        <item name="android:textSize">17dp</item>
        <item name="android:textColor">?colorAccent</item>
    </style>
    <style name="DialogStyleLight" parent="@android:style/Theme.DeviceDefault.Light.Dialog">
        <item name="android:windowTitleStyle">@style/DialogTitleStyle</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowMinWidthMajor">95.0%</item>
        <item name="android:windowMinWidthMinor">100.0%</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowNoTitle">false</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="DialogStyleDark" parent="@android:style/Theme.DeviceDefault.Dialog">
        <item name="android:windowTitleStyle">@style/DialogTitleStyle</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowMinWidthMajor">95.0%</item>
        <item name="android:windowMinWidthMinor">100.0%</item>

        <item name="windowActionBar">false</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowNoTitle">false</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <!--对话框动画-->
    <style name="MyDialogStyle" parent="@android:style/Theme.DeviceDefault.Light.Dialog">
        <item name="android:windowFrame">@null</item>              
        <item name="android:windowNoTitle">true</item>　　　　　　　
        <item name="android:windowIsFloating">true</item>         
        <item name="android:windowContentOverlay">@null</item>       
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowMinWidthMajor">95.0%</item>
        <item name="android:windowMinWidthMinor">100.0%</item>
        <item name="android:windowTitleStyle">@style/DialogTitleStyle</item>
    </style>
    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">17dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="DarkAppTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/dark_cardview_bg</item>
        <item name="colorPrimaryDark">?colorPrimary</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:colorBackground">@color/dark_cardview_bg</item>
        <item name="android:listDivider">@color/dark_divider_bg</item>
        <item name="appbarlayout">@style/AppBarLight</item>
        <item name="Global_Divider">@color/dark_divider_bg</item>
        <item name="cardBackgroundColor">@color/dark_divider_bg</item>
        <item name="cardBackgroundheadColor">@color/dark_divider_bg</item>
        <item name="BottomNavigationBackground">@color/dark_cardview_bg</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="TextStyle">@android:color/white</item>
        <item name="navColorSelector">@color/nav_items_selector_black</item>
        <item name="android:dialogTheme">@style/DialogStyleDark</item>
        <item name="android:alertDialogTheme">@style/DialogStyleDark</item>
        <item name="colorAccent">#ff2ec6ff</item>
        <item name="android:navigationBarColor">@color/dark_cardview_bg</item>
        <item name="MainwindowBG">@color/dark_cardview_bg</item>
    </style>


    <style name="CollapsingToolbarLayoutStyle" parent="@style/Widget.Design.Light.CollapsingToolbar" />
    <style name="Widget.Design.Light.CollapsingToolbar" parent="@android:style/Widget"/>

</resources>