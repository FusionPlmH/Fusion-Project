<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        style="@style/saltlinearLayoutCompat_vertical">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_status_bar"
            android:nestedScrollingEnabled="false"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>
    <LinearLayout
    style="@style/saltlinearLayoutCompat_vertical"
        android:layout_marginTop="@dimen/grid_top">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_keyguard"
            android:nestedScrollingEnabled="false"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>
    <LinearLayout
        style="@style/saltlinearLayoutCompat_vertical"
        android:layout_marginTop="@dimen/grid_top">
        <com.salt.frame.saltview.SaltListView
            android:id="@+id/list_power"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" />
    </LinearLayout>
    <LinearLayout
        style="@style/saltlinearLayoutCompat_vertical"
        android:layout_marginTop="@dimen/grid_top">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_nav"
            android:nestedScrollingEnabled="false"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>