        android:summaryOn="@string/on" android:summaryOff="@string/off"/>
    <org.salt.preference.SaltSettingCategoryPreference android:title="@string/system_animation"/>

    <org.salt.preference.SaltListPreference android:title="@string/window_animation" android:key="window_animation_scale" android:defaultValue="1" android:entries="@array/window_animation_scale_entries"   android:entryValues="@array/window_animation_scale_values" salt:modeSettings="1"/>
