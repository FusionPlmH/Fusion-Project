    <org.salt.preference.SaltPreference android:title="@string/battery_log" android:key="leo_battery_log" android:defaultValue="false" android:summary="@string/battery_log_summary"/>
    <org.salt.preference.SaltPreference android:title="电池校正" android:key="BatteryRefreshBeta" android:defaultValue="false" android:summary="电池充满时可进行电池数据校正"/>
