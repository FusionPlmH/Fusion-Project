    <org.salt.preference.SaltSettingCategoryPreference android:title="优化调整"/>
    <org.salt.preference.SaltPreference android:title="修复淘宝优酷热更新问题" android:key="leo_taobao" android:defaultValue="false" android:summary="出现淘宝优酷闪退可以试试"/>
