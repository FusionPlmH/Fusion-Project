<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppThemeWhite" parent="AppThemeLight">
        <item name="android:navigationBarColor">@android:color/white</item>
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="colorPrimary">@color/lightPink</item>
        <item name="colorPrimaryDark">@color/lightPink</item>
        <item name="colorAccent">@color/lightPink</item>
        <item name="android:actionBarTheme">@style/AppTheme.AppBarOverlay.Light</item>
        <item name="android:colorForegroundInverse">#ffffff</item>
    </style>

    <style name="AppThemeWallpaperLight" parent="AppThemeWhite">
        <item name="android:navigationBarColor">#00ffffff</item>
        <item name="android:statusBarColor">#c0ffffff</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorForegroundInverse">#c0ffffff</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="AppThemeWallpaper" parent="AppThemeNight">
        <item name="android:navigationBarColor">#a0000000</item>
        <item name="android:statusBarColor">#a0000000</item>
        <item name="colorPrimary">@color/lightPink</item>
        <item name="colorPrimaryDark">@color/lightPink</item>
        <item name="colorAccent">@color/lightPink</item>
        <item name="android:colorForegroundInverse">#a0000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="AppTheme.AppBarOverlay.Light" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="titleTextColor">?android:textColorPrimary</item>
        <item name="subtitleTextColor">?android:textColorSecondary</item>
        <item name="colorControlNormal">?android:textColorPrimary</item>
        <item name="android:foregroundTint">?android:textColorSecondary</item>
        <item name="android:foregroundTintMode">screen</item>
        <item name="android:drawableTint">?android:textColorPrimary</item>
    </style>

    <style name="AppThemeNight" parent="Theme.AppCompat">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:statusBarColor">#151515</item>
        <item name="android:navigationBarColor">#151515</item>
        <item name="colorPrimary">@android:color/background_dark</item>
        <item name="colorPrimaryDark">@android:color/background_dark</item>
        <item name="android:windowBackground">@color/window_background_dark</item>
        <item name="android:textColorSecondary">@android:color/darker_gray</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/activityAnim</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:colorForegroundInverse">#151515</item>
    </style>
</resources>