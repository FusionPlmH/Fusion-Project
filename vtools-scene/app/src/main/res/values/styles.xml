<resources>

    <style name="NotificationInfo" parent="android:TextAppearance.Material.Notification.Info" />

    <style name="NotificationTitle" parent="android:TextAppearance.Material.Notification.Title" />

    <style name="SwitchTheme" parent="textTitle">
        <item name="android:thumb">@drawable/switch_thumb</item>
        <item name="android:track">@drawable/switch_track</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/activityAnim</item>
        <item name="android:windowBackground">@color/window_background_light</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemeNight" parent="Theme.AppCompat">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/background_dark</item>
        <item name="colorPrimary">@android:color/background_dark</item>
        <item name="colorPrimaryDark">@android:color/background_dark</item>
        <item name="android:windowBackground">@color/window_background_dark</item>
        <item name="android:textColorSecondary">@android:color/darker_gray</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/activityAnim</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemeLight" parent="AppTheme">
        <item name="android:textColor">#888888</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/activityAnim</item>
    </style>

    <style name="AppThemeTransparent" parent="@android:style/Theme.Translucent.NoTitleBar.Fullscreen">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <style name="AppThemeBlue" parent="AppThemeLight">
        <item name="android:navigationBarColor">@color/colorBlue</item>
        <item name="android:statusBarColor">@color/colorBlue</item>
        <item name="colorPrimary">@color/colorBlue</item>
        <item name="colorPrimaryDark">@color/colorBlue</item>
        <item name="colorAccent">@color/colorBlue</item>
        <item name="android:actionBarTheme">@style/AppTheme.AppBarOverlay.Dark</item>
    </style>

    <style name="AppThemeCyan" parent="AppThemeLight">
        <item name="android:navigationBarColor">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionBarTheme">@style/AppTheme.AppBarOverlay.Dark</item>
    </style>

    <style name="AppThemeGreen" parent="AppThemeLight">
        <item name="android:navigationBarColor">@color/color_load_mid</item>
        <item name="android:statusBarColor">@color/color_load_mid</item>
        <item name="colorPrimary">@color/color_load_mid</item>
        <item name="colorPrimaryDark">@color/color_load_mid</item>
        <item name="colorAccent">@color/color_load_mid</item>
        <item name="android:actionBarTheme">@style/AppTheme.AppBarOverlay.Dark</item>
    </style>

    <style name="AppThemeOrange" parent="AppThemeLight">
        <item name="android:navigationBarColor">@color/color_load_hight</item>
        <item name="android:statusBarColor">@color/color_load_hight</item>
        <item name="colorPrimary">@color/color_load_hight</item>
        <item name="colorPrimaryDark">@color/color_load_hight</item>
        <item name="colorAccent">@color/color_load_hight</item>
        <item name="android:actionBarTheme">@style/AppTheme.AppBarOverlay.Dark</item>
    </style>

    <style name="AppThemeRed" parent="AppThemeLight">
        <item name="android:navigationBarColor">@color/newYearAccent</item>
        <item name="android:statusBarColor">@color/newYearAccent</item>
        <item name="android:windowBackground">@color/newYearBgColor</item>
        <item name="colorPrimary">@color/newYearAccent</item>
        <item name="colorPrimaryDark">@color/newYearAccent</item>
        <item name="colorAccent">@color/newYearAccent</item>
        <item name="android:actionBarTheme">@style/AppTheme.AppBarOverlay.Dark</item>
    </style>

    <style name="AppThemePink" parent="AppThemeLight">
        <item name="android:navigationBarColor">@color/pink</item>
        <item name="android:statusBarColor">@color/pink</item>
        <item name="colorPrimary">@color/pink</item>
        <item name="colorPrimaryDark">@color/pink</item>
        <item name="colorAccent">@color/pink</item>
        <item name="android:actionBarTheme">@style/AppTheme.AppBarOverlay.Dark</item>
    </style>

    <style name="AppThemePretty" parent="AppThemeLight">
        <item name="android:navigationBarColor">@color/pretty</item>
        <item name="android:statusBarColor">@color/pretty</item>
        <item name="colorPrimary">@color/pretty</item>
        <item name="colorPrimaryDark">@color/pretty</item>
        <item name="colorAccent">@color/pretty</item>
        <item name="android:actionBarTheme">@style/AppTheme.AppBarOverlay.Dark</item>
    </style>

    <style name="AppThemeViolet" parent="AppThemeLight">
        <item name="android:navigationBarColor">@color/violet</item>
        <item name="android:statusBarColor">@color/violet</item>
        <item name="colorPrimary">@color/violet</item>
        <item name="colorPrimaryDark">@color/violet</item>
        <item name="colorAccent">@color/violet</item>
        <item name="android:actionBarTheme">@style/AppTheme.AppBarOverlay.Dark</item>
    </style>

    <style name="AppThemeWhite" parent="AppThemeLight">
        <item name="android:navigationBarColor">@color/lightPink</item>
        <item name="android:statusBarColor">@color/lightPink</item>
        <item name="colorPrimary">@color/lightPink</item>
        <item name="colorPrimaryDark">@color/lightPink</item>
        <item name="colorAccent">@color/lightPink</item>
        <item name="android:actionBarTheme">@style/AppTheme.AppBarOverlay.Dark</item>
    </style>

    <style name="AppThemeWallpaperLight" parent="AppThemeWhite">
        <item name="android:navigationBarColor">#00ffffff</item>
        <item name="colorPrimaryDark">@color/lightPink</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="AppThemeWallpaper" parent="AppTheme.AppBarOverlay.Dark">
        <item name="android:navigationBarColor">#00000000</item>
        <item name="android:statusBarColor">#d0000000</item>
        <item name="colorPrimary">@color/lightPink</item>
        <item name="colorPrimaryDark">@color/lightPink</item>
        <item name="colorAccent">@color/lightPink</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="AppThemeNoActionBarNight" parent="AppThemeNight">
        <item name="android:textColor">#888888</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/activityAnim</item>
        <item name="android:actionBarTheme">@style/AppTheme.AppBarOverlay.Dark</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlNormal">?android:textColorPrimary</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="textTitle">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="textSmall">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:textSize">11dp</item>
    </style>

    <!--activity 对话框样式  -->
    <style name="FloatActivity" parent="Theme.AppCompat.Light">
        <!-- float_box为我们定义的窗口背景-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:opacity">@integer/opacity</item>
    </style>

    <style name="activityAnim">
        <item name="android:activityOpenEnterAnimation">@anim/activity_open_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_open_exit</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_close_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_close_exit</item>
        <item name="android:taskOpenEnterAnimation">@anim/task_open_enter</item>
        <item name="android:taskOpenExitAnimation">@anim/task_open_exit</item>
        <item name="android:taskCloseEnterAnimation">@anim/task_close_enter</item>
        <item name="android:taskCloseExitAnimation">@anim/task_close_exit</item>
    </style>

    <style name="windowAnim">
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay.Dark" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="ListCardItem">
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/krscript_item_ripple_inactive</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="ListCardItemLast" parent="ListCardItem">
        <item name="android:layout_marginBottom">@dimen/activity_vertical_margin</item>
    </style>

    <style name="ListCardItemClickable" parent="ListCardItem">
        <item name="android:background">@drawable/krscript_item_ripple</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="ListCardItemClickableLast" parent="ListCardItemClickable">
        <item name="android:layout_marginBottom">@dimen/activity_vertical_margin</item>
    </style>
</resources>
