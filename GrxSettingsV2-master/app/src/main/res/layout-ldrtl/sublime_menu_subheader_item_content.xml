<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include layout="@layout/sublime_include_icon_holder"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <com.sublimenavigationview.StateAwareTextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?android:textColorSecondary"
            android:gravity="end"
            android:textAppearance="?attr/snvSubheaderItemTextAppearance"
            app:saTextAppearance="@style/SnvDefaultSubheaderItemTextAppearance"
            android:maxLines="1"
            android:ellipsize="end"/>

        <com.sublimenavigationview.StateAwareTextView
            android:id="@+id/hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?android:textColorSecondary"
            android:gravity="end"
            android:textAppearance="?attr/snvSubheaderHintTextAppearance"
            app:saTextAppearance="@style/SnvDefaultSubheaderHintTextAppearance"
            android:maxLines="1"
            android:ellipsize="end"/>

    </LinearLayout>

    <com.sublimenavigationview.StateAwareImageView
        android:id="@+id/expand_collapse"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_weight="0"
        android:contentDescription="Expand/Collapse"/>

</merge>