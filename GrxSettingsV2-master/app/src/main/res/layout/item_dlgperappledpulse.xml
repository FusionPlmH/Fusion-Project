<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/gid_app_icon"
        android:layout_marginStart="2dp"
        android:layout_gravity="center"
        android:layout_width="30dp"
        android:layout_height="30dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/aux"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dip"
        android:layout_marginBottom="6dip"
        android:layout_weight="0.7"
        android:layout_marginStart="10.0dip"
        android:layout_marginEnd="6.0dip">
        <TextView
            android:id="@+id/gid_app_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceSmall"/>

        <TextView
            android:id="@+id/gid_package_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
           android:layout_below="@+id/gid_app_label"
            android:textAppearance="?android:attr/textAppearanceSmall"
            />
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:layout_width="0dp"
        android:layout_weight="0.3"
        android:padding="3dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/gid_pulses_container"
        android:layout_marginEnd="10dp" android:layout_height="match_parent">
        <TextView android:textAppearance="?android:textAppearanceSmall" android:textSize="13dp" android:layout_gravity="center" android:id="@+id/gid_pulse_on"
            android:layout_width="wrap_content" android:singleLine="true" android:layout_height="wrap_content" />
        <TextView android:textAppearance="?android:textAppearanceSmall" android:textSize="13dp"
            android:singleLine="true" android:layout_gravity="center" android:id="@+id/gid_pulse_off"
            android:layout_width="wrap_content" android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>