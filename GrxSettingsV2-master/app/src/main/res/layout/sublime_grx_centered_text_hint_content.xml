<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_weight="1">

    <com.sublimenavigationview.StateAwareTextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:textAppearance="?attr/snvItemTextAppearance"
        android:textColor="?menucenteredtextcolor"
        app:saTextAppearance="@style/SnvDefaultItemTextAppearance"
        android:maxLines="1"
        android:ellipsize="end"/>

    <com.sublimenavigationview.StateAwareTextView
        android:id="@+id/hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:textAppearance="?attr/snvHintTextAppearance"
        app:saTextAppearance="@style/SnvDefaultHintTextAppearance"
        android:maxLines="1"
        android:ellipsize="end"/>

</LinearLayout>