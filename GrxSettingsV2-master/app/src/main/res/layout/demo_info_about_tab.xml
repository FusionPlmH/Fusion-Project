<?xml version="1.0" encoding="utf-8"?>
<com.fab.ObservableScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:include="http://schemas.android.com/tools"

    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:id="@+id/observableview">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">

            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginBottom="5dp"
                android:gravity="center_horizontal"
                android:textColor="?colorAccent" android:textSize="18sp" android:text="GrxSettings v2.0"/>
            <TextView android:layout_marginTop="3dp"  android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="(February 2018)" android:textSize="16dp" android:textColor="?colorAccent"  android:gravity="center_horizontal"  />

            <ImageView android:layout_width="54dp" android:layout_height="54dp" android:layout_gravity="center" android:layout_marginTop="8dp" android:layout_marginBottom="4dp"
                android:src="@drawable/demo_grouxho"/>
                <TextView android:layout_marginTop="4dp" android:layout_marginBottom="4dp" android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:text="by Grouxho" android:textSize="14dp" android:gravity="center" android:textColor="?complementary_color3"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:layout_marginBottom="4dp"
                android:text="An app for configuring user preferences  - LP 5.1+" android:textSize="14dp"  android:textStyle="bold" android:layout_gravity="center_horizontal"/>
            <TextView android:layout_marginStart="15dp" android:layout_marginEnd="15dp" android:textAlignment="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:layout_marginBottom="4dp"  android:layout_gravity="center_horizontal"
                android:text="This app helps to rom and mod developers to configure their mods."/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:layout_marginBottom="4dp"
                android:text="More info" android:textSize="14dp"  android:textStyle="bold" android:layout_gravity="center_horizontal"/>

                <com.grx.settings.views.LinearLayoutWithLink
                    grxURL="http://www.github.com" android:paddingTop="12dp" android:paddingBottom="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginStart="10dp" android:layout_marginEnd="10dp"
                    android:background="?selectableItemBackground" android:orientation="horizontal">
                    <ImageView android:layout_width="36dp" android:layout_height="36dp" android:layout_gravity="center_vertical"  android:src="@drawable/demo_github_logo"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="match_parent" android:gravity="center_vertical" android:layout_marginStart="15dp"
                        android:text="Source Code in GitHub"/>
                </com.grx.settings.views.LinearLayoutWithLink>

                <com.grx.settings.views.LinearLayoutWithLink
                    grxURL="http://www.espdroids.com" android:paddingTop="12dp" android:paddingBottom="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginStart="10dp" android:layout_marginEnd="10dp"
                    android:background="?selectableItemBackground" android:orientation="horizontal">
                    <com.grx.settings.views.ImageViewWithLink
                        android:layout_width="36dp" android:layout_height="36dp" android:layout_gravity="center_vertical"  android:tint="?colorAccent" android:src="@drawable/demo_espdroids"/>
                    <TextView android:layout_width="wrap_content"  android:layout_height="match_parent"  android:gravity="center_vertical" android:layout_marginStart="15dp"
                        android:text="EspDroids.com"/>
                </com.grx.settings.views.LinearLayoutWithLink>
                <TextView android:layout_marginTop="4dp" android:layout_marginBottom="4dp" android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:text="License" android:textSize="18dp" android:textStyle="bold" android:gravity="center" android:textColor="?complemnt_accent_color"/>

                <com.grx.settings.views.LinearLayoutWithLink
                    grxURL="https://www.mozilla.org/en-US/MPL/2.0/" android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="?selectableItemBackground">
                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"  android:padding="12dp"
                        android:text="All the source code made by me in this app  is Licensed under the Mozilla Public License Version version 2.0 (Press on this text to see the full license text).\n\n
This app uses several libraries / pieces of code. The corresponding license to apply to that code is embedded in the source code. Please respect licensing!!. SublimeNavigation view, QuadFlask colorpicker, and Sergei Margaritov (Apache 2.0). Kerneladiutor (GPL 3.0). Floating Action View (MIT)."/>
                </com.grx.settings.views.LinearLayoutWithLink>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"></LinearLayout>


            </LinearLayout>






        </FrameLayout>
    </LinearLayout>

</com.fab.ObservableScrollView>