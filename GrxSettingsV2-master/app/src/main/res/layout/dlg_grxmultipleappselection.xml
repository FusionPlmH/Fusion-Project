<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:LinearLayoutandroid="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

    <LinearLayout
        android:id="@+id/gid_list_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout android:layout_width="match_parent" android:background="#09222222" android:layout_height="1dip"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView android:id="@+id/gid_items_selected" android:layout_marginBottom="8dp" android:layout_marginTop="5dp" android:layout_centerVertical="true" android:textSize="14sp" android:textColor="?colorAccent" android:layout_width="wrap_content" android:layout_height="18dp" android:gravity="center" android:layout_gravity="center" />
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:background="#09222222" android:layout_height="2dip"/>

    </LinearLayout>

    <ListView
        android:id="@+id/gid_listview"
        android:paddingStart="8dip"
        android:paddingEnd="8dip"
        android:divider="?android:listDivider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout android:orientation="horizontal" android:id="@+id/gid_separator" android:layout_width="match_parent" android:background="#09222222" android:layout_height="3dip"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="16dp"
        android:id="@+id/gid_progressbar_txt"
        android:visibility="gone"
        android:gravity="center"/>

    <ProgressBar  android:id="@+id/gid_progressbar" android:layout_gravity="center" android:gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerHorizontal="true" android:layout_marginBottom="16dp" android:layout_marginTop="16dp" android:indeterminate="true"
        android:indeterminateTint="?attr/colorAccent" android:indeterminateTintMode="src_in"  android:progressTint="?attr/colorAccent" />

</LinearLayout>