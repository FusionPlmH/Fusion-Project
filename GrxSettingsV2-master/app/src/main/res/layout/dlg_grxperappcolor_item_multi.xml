<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/gid_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground">



    <ImageView
        android:id="@+id/gid_edit_button"
        android:layout_gravity="center"
        android:layout_width="@dimen/dialog_aux_buttons_size"
        android:layout_height="@dimen/dialog_aux_buttons_size"/>

    <RelativeLayout
        android:id="@+id/gid_auxiliar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dip"
        android:layout_marginBottom="6dip"
        android:layout_weight="1.0"
        android:layout_marginStart="15.0dip"
        android:layout_marginEnd="6.0dip">




            <TextView
                android:id="@+id/gid_edit_item_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textStyle="bold"
                android:singleLine="true"

                android:textAppearance="?android:attr/textAppearanceSmall"/>

            <TextView
                android:id="@+id/gid_packagename_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:alpha="0.85"
                android:layout_below="@+id/gid_edit_item_text"
                android:textAppearance="?android:attr/textAppearanceSmall"
                />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:id="@+id/gid_item_icon_container"
        android:layout_marginEnd="6dp"
        android:layout_marginStart="5dp"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:id="@+id/gid_app_color"
            android:layout_width="@dimen/dialog_aux_buttons_size"
            android:layout_height="@dimen/dialog_aux_buttons_size"
            android:scaleType="center"
            android:layout_toEndOf="@+id/gid_auxiliar"
            android:layout_alignParentEnd="true"
            />

    </LinearLayout>





</LinearLayout>