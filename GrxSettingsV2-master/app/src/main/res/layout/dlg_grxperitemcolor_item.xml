<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/gid_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:descendantFocusability="blocksDescendants"
    android:padding="5dp"
    android:background="?android:attr/selectableItemBackground">
    <LinearLayout
        android:layout_weight="2"
        android:id="@+id/gid_item_icon_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/item_icon"
            android:layout_gravity="center"
            android:paddingStart="8dp"
            android:layout_width="@dimen/dialog_aux_buttons_size"
            android:layout_height="@dimen/dialog_aux_buttons_size"/>

    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="12dp"
            android:maxLines="1"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceSmall"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:id="@+id/gid_color_container"
        android:paddingEnd="8dp"
        android:orientation="vertical"
        android:layout_weight="2"
        android:gravity="center">
        <ImageView
            android:id="@+id/gid_item_color"

            android:layout_width="@dimen/dialog_aux_buttons_size"
            android:layout_height="@dimen/dialog_aux_buttons_size"
            android:scaleType="center"
            android:layout_toEndOf="@+id/gid_auxiliar"
            android:layout_alignParentEnd="true"
            />
    </LinearLayout>
</LinearLayout>