<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:LinearLayoutandroid="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout android:layout_width="match_parent" android:background="#06cccccc" android:layout_height="6dip"/>
    <LinearLayout android:id="@+id/gid_buttons_container"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/gid_help_button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:clickable="true"
                android:layout_height="wrap_content">
                <ImageView
                    android:tint="?complemnt_accent_color"
                    android:background="?selectableItemBackgroundBorderless"
                    android:layout_width="@dimen/dialog_aux_buttons_size"
                    android:src="@drawable/ico_ayuda"
                    android:layout_height="@dimen/dialog_aux_buttons_size" />
            </LinearLayout>

        <LinearLayout
            android:id="@+id/gid_delete_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:clickable="true"
            android:layout_height="wrap_content">
            <ImageView
                android:tint="?complemnt_accent_color"
                android:background="?selectableItemBackgroundBorderless"
                android:layout_width="@dimen/dialog_aux_buttons_size"
                android:src="@drawable/ico_borrar"
                android:layout_height="@dimen/dialog_aux_buttons_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/gid_sort_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:clickable="true"
            android:layout_height="wrap_content">
            <ImageView
                android:tint="?complemnt_accent_color"
                android:background="?selectableItemBackgroundBorderless"
                android:layout_width="@dimen/dialog_aux_buttons_size"
                android:src="@drawable/ico_ordenar"
                android:layout_height="@dimen/dialog_aux_buttons_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/gid_add_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:clickable="true"
            android:layout_height="wrap_content">
                <ImageView
                    android:tint="?complemnt_accent_color"
                    android:background="?selectableItemBackgroundBorderless"
                    android:layout_width="@dimen/dialog_aux_buttons_size"
                    android:src="@drawable/ico_apps_usu"
                    android:layout_height="@dimen/dialog_aux_buttons_size" />
        </LinearLayout>
    </LinearLayout>


<LinearLayout
    android:id="@+id/gid_list_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView android:id="@+id/gid_items_selected" android:textSize="14.0dip" android:textColor="?colorAccent" android:layout_width="match_parent" android:layout_height="28.0dip" android:gravity="center" android:layout_gravity="center" />
    <LinearLayout android:layout_width="match_parent" android:background="#06cccccc" android:layout_height="6dip"/>
</LinearLayout>




    <com.sldv.SlideAndDragListView
        android:id="@+id/gid_slv_listview"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fadeScrollbars="true"
        android:listSelector="?android:selectableItemBackground"
        android:divider="?android:listDivider"
        android:paddingStart="8dip"
        android:paddingEnd="8dip">
    </com.sldv.SlideAndDragListView>

    <LinearLayout android:orientation="horizontal" android:id="@+id/gid_separator" android:layout_width="match_parent" android:background="#06cccccc" android:layout_height="5dip"/>


</LinearLayout>