    <com.fusionleo.salt.preference.GlobalListPreference android:title="@string/window_animation" android:key="window_animation_scale" android:defaultValue="1" android:entries="@array/window_animation_scale_entries"   android:entryValues="@array/window_animation_scale_values" />
    <com.fusionleo.salt.preference.GlobalListPreference android:title="@string/transition_animation" android:key="transition_animation_scale" android:defaultValue="1" android:entries="@array/window_animation_scale_entries"  android:entryValues="@array/window_animation_scale_values" />
    <com.fusionleo.salt.preference.GlobalListPreference android:title="@string/animator_duration" android:key="animator_duration_scale" android:defaultValue="1" android:entries="@array/window_animation_scale_entries" android:entryValues="@array/window_animation_scale_values" />
    <com.fusionleo.salt.preference.CardPreferenceBorder  />
    <com.fusionleo.salt.preference.MyPreferenceCategory android:title="@string/mokee_animation"/>
        <com.fusionleo.salt.preference.MyListPreference android:entries="@array/listview_animation_entries" android:title="@string/list_animation" android:key="leo_tweaks_abs_list_animation_style"  android:defaultValue="0" android:entryValues="@array/listview_animation_values" />
        <com.fusionleo.salt.preference.MyListPreference android:entries="@array/listview_interpolator_entries" android:title="@string/list_interpolator" android:key="leo_tweaks_abs_list_interpolator_style" android:defaultValue="0" android:entryValues="@array/listview_interpolator_values" />
    <com.fusionleo.salt.preference.CardPreferenceBorder  />
    <com.fusionleo.salt.preference.MyPreferenceCategory android:title="@string/toast_animation"/>
    <com.fusionleo.salt.preference.MyListPreference android:entries="@array/toast_animation_entries" android:title="@string/toast_animation" android:key="leo_tweaks_toast_animation" android:defaultValue="Animation.Toast" android:entryValues="@array/toast_animation_values" />
    <com.fusionleo.salt.preference.CardPreferenceBorder  />
    <PreferenceCategory android:title="@string/secure_window"/>
    <com.fusionleo.salt.preference.MySwitchPreference android:title="@string/secure_window" android:key="leo_tweaks_secure_window" android:defaultValue="false" android:summaryOn="@string/secure_window_yes" android:summaryOff="@string/secure_window_no"/>
