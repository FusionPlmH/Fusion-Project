    <com.fusionleo.salt.preference.CardPreferenceBorder  />
    <PreferenceCategory android:title="@string/dual_app"/>
    <com.fusionleo.salt.preference.MySwitchPreference android:title="@string/dual_app_cloned" android:key="leo_tweaks_dual_app_enabled" android:defaultValue="true" android:summaryOn="@string/dual_app_cloned_yes" android:summaryOff="@string/dual_app_cloned_no" />
    <com.fusionleo.salt.preference.CardPreferenceBorder  />
    <PreferenceCategory android:title="@string/list_grid_other"/>
