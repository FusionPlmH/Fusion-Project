<?xml version="1.0" encoding="utf-8"?><LinearLayout android:layout_width="match_parent"    android:layout_height="wrap_content"    xmlns:card_view="http://schemas.android.com/apk/res-auto"    android:layout_marginTop="10dp"    android:layout_marginBottom="70dp"    android:orientation="vertical"    xmlns:android="http://schemas.android.com/apk/res/android">        <android.support.v7.widget.CardView            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:orientation="vertical"            card_view:cardCornerRadius="@dimen/card_view_radius"            card_view:cardElevation="@dimen/shadow_height"            card_view:cardUseCompatPadding="false"            card_view:cardBackgroundColor = "?attr/cardBackgroundColor"            >            <LinearLayout                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:padding="10dp"                android:orientation="vertical">                <TextView                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:text="关于我们"                    android:tag="grid_system_name"                    android:paddingStart="16dp"                    android:textSize="@dimen/grid_title_size"                    android:textAppearance="?android:attr/textAppearanceMedium"                    android:layout_marginBottom="15dp"/>                <com.leo.salt.tweaks.view.widget.LineGridView                    android:tag="grid_system"                    android:layoutAnimation="@anim/grid_layout_animation"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:horizontalSpacing="10dp"                    android:verticalSpacing="10dp"                    android:numColumns="4"                    android:gravity="center"                    />            </LinearLayout>        </android.support.v7.widget.CardView>        <android.support.v7.widget.CardView            android:layout_marginTop="@dimen/grid_top"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:orientation="vertical"            card_view:cardCornerRadius="@dimen/card_view_radius"            card_view:cardElevation="@dimen/shadow_height"            card_view:cardUseCompatPadding="false"            card_view:cardBackgroundColor = "?attr/cardBackgroundColor"            >            <LinearLayout                android:padding="10dp"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:orientation="vertical">                <TextView                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:text="高级工具"                    android:paddingStart="16dp"                    android:textSize="@dimen/grid_title_size"                    android:tag="grid_advanced_name"                    android:textAppearance="?android:attr/textAppearanceMedium"                    android:layout_marginBottom="15dp"/>                <com.leo.salt.tweaks.view.widget.LineGridView                    android:tag="grid_advanced"                    android:layoutAnimation="@anim/grid_layout_animation"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:horizontalSpacing="10dp"                    android:verticalSpacing="10dp"                    android:numColumns="4"                    android:gravity="center"                    />            </LinearLayout>        </android.support.v7.widget.CardView>        <android.support.v7.widget.CardView            android:layout_marginTop="@dimen/grid_top"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:orientation="vertical"            card_view:cardCornerRadius="@dimen/card_view_radius"            card_view:cardElevation="@dimen/shadow_height"            card_view:cardUseCompatPadding="false"            card_view:cardBackgroundColor = "?attr/cardBackgroundColor"            >            <LinearLayout                android:padding="10dp"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:orientation="vertical">                <TextView                    android:tag="grid_url_name"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:text="隐藏url"                    android:paddingStart="16dp"                    android:textSize="@dimen/grid_title_size"                    android:textAppearance="?android:attr/textAppearanceMedium"                    android:layout_marginBottom="15dp"/>                <com.leo.salt.tweaks.view.widget.LineGridView                    android:tag="grid_url"                    android:layoutAnimation="@anim/grid_layout_animation"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:horizontalSpacing="10dp"                    android:verticalSpacing="10dp"                    android:numColumns="4"                    android:gravity="center"                    />            </LinearLayout>        </android.support.v7.widget.CardView>    </LinearLayout>