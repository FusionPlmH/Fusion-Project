<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="70dp"
    android:orientation="vertical" >
    <android.support.v7.widget.CardView    android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        card_view:cardCornerRadius="@dimen/card_view_radius"
        card_view:cardElevation="@dimen/shadow_height"
        card_view:cardUseCompatPadding="false"
        card_view:cardBackgroundColor = "?attr/cardBackgroundColor"
        >
        <LinearLayout
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:tag="grid_system_statusbar"
                android:paddingStart="16dp"
                android:textSize="@dimen/grid_title_size"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_marginBottom="15dp"/>
            <com.leo.salt.tweaks.view.widget.LineGridView
                android:tag="grid_statusbar"
                android:layoutAnimation="@anim/grid_layout_animation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:horizontalSpacing="10dp"
                android:verticalSpacing="10dp"
                android:numColumns="4"
                android:gravity="center"

                />
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView    android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        card_view:cardCornerRadius="@dimen/card_view_radius"
        card_view:cardElevation="@dimen/shadow_height"
        card_view:cardUseCompatPadding="false"
        android:layout_marginTop="@dimen/grid_top"
        card_view:cardBackgroundColor = "?attr/cardBackgroundColor"
        >
        <LinearLayout
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:tag="grid_system_notificationpanel"
                android:paddingStart="16dp"
                android:textSize="@dimen/grid_title_size"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_marginBottom="15dp"/>
            <com.leo.salt.tweaks.view.widget.LineGridView
                android:tag="grid_notificationpanel"
                android:layoutAnimation="@anim/grid_layout_animation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:horizontalSpacing="10dp"
                android:verticalSpacing="10dp"
                android:numColumns="4"
                android:gravity="center"

                />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView    android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        card_view:cardCornerRadius="@dimen/card_view_radius"
        card_view:cardElevation="@dimen/shadow_height"
        card_view:cardUseCompatPadding="false"
        android:layout_marginTop="@dimen/grid_top"
        card_view:cardBackgroundColor = "?attr/cardBackgroundColor"
        >
        <LinearLayout
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:tag="grid_system_keyguard"
                android:paddingStart="16dp"
                android:textSize="@dimen/grid_title_size"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_marginBottom="15dp"/>
            <com.leo.salt.tweaks.view.widget.LineGridView
                android:tag="grid_keyguard"
                android:layoutAnimation="@anim/grid_layout_animation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:horizontalSpacing="10dp"
                android:verticalSpacing="10dp"
                android:numColumns="4"
                android:gravity="center"

                />
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView    android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/grid_top"
        card_view:cardCornerRadius="@dimen/card_view_radius"
        card_view:cardElevation="@dimen/shadow_height"
        card_view:cardUseCompatPadding="false"
        card_view:cardBackgroundColor = "?attr/cardBackgroundColor"
        >
        <LinearLayout
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:tag="grid_system_powermenu"
                android:paddingStart="16dp"
                android:textSize="@dimen/grid_title_size"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_marginBottom="15dp"/>
            <com.leo.salt.tweaks.view.widget.LineGridView
                android:tag="grid_powermenu"
                android:layoutAnimation="@anim/grid_layout_animation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:horizontalSpacing="10dp"
                android:verticalSpacing="10dp"
                android:numColumns="4"
                android:gravity="center"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView    android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        card_view:cardCornerRadius="@dimen/card_view_radius"
        card_view:cardElevation="@dimen/shadow_height"
        card_view:cardUseCompatPadding="false"
        android:layout_marginTop="@dimen/grid_top"
        card_view:cardBackgroundColor = "?attr/cardBackgroundColor"
        >
        <LinearLayout
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:tag="grid_system_navigationbar"
                android:paddingStart="16dp"
                android:textSize="@dimen/grid_title_size"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_marginBottom="15dp"/>
            <com.leo.salt.tweaks.view.widget.LineGridView
                android:tag="grid_navigationbar"
                android:layoutAnimation="@anim/grid_layout_animation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:horizontalSpacing="10dp"
                android:verticalSpacing="10dp"
                android:numColumns="4"
                android:gravity="center"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView    android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        card_view:cardCornerRadius="@dimen/card_view_radius"
        card_view:cardElevation="@dimen/shadow_height"
        card_view:cardUseCompatPadding="false"
        android:layout_marginTop="@dimen/grid_top"
        card_view:cardBackgroundColor = "?attr/cardBackgroundColor"
        >
        <LinearLayout
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:tag="grid_system_task"
                android:paddingStart="16dp"
                android:textSize="@dimen/grid_title_size"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_marginBottom="15dp"/>
            <com.leo.salt.tweaks.view.widget.LineGridView
                android:tag="grid_task"
                android:layoutAnimation="@anim/grid_layout_animation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:horizontalSpacing="10dp"
                android:verticalSpacing="10dp"
                android:numColumns="4"
                android:gravity="center"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>




