<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ixuea.android.downloader.simple.MainActivity">


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="downloadAFile"
        android:text="Download a file" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="useInList"
        android:text="Use in list" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="downloadManager"
        android:text="Download manager page" />

</LinearLayout>
