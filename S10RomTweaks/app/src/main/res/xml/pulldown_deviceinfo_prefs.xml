<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:salt="http://schemas.android.com/apk/res-auto">
    <com.leo.salt.preference.SaltSettingCategoryPreference android:title="@string/device_info_statusbar" />

    <com.leo.salt.preference.SaltSettingSwitchPreference
        android:key="device_info_statusbar_enabled"
        android:title="@string/device_info_statusbar_enabled"
        android:defaultValue="false"
        android:summaryOn="@string/on"
        android:summaryOff="@string/off" />
    <com.leo.salt.preference.SaltSettingDefaultListPreference

        android:key="Infostatusbarstyle"
        android:title="@string/device_info_statusbar_style"
        android:defaultValue="4"
        android:entryValues="@array/deviceinfo_style_values"
        android:entries="@array/deviceinfo_style_entries"
        />
    <com.leo.salt.preference.SaltSettingFontPreference

        android:key="device_info_statusbar_font"
        android:title="@string/device_info_statusbar_font"
        android:defaultValue="0"
        android:entryValues="@array/font_style_values"
        android:entries="@array/font_style_entries"
        />
    <com.leo.salt.preference.SaltSettingSeekBarPreference
        android:key="statusbarInfosize"
        android:title="@string/device_info_statusbar_size"
        android:defaultValue="13"
        android:min="8"
        android:max="20"
        salt:interval="1"
        android:summary="@string/seekbar_sumarry"
        salt:unitsLeft="@string/text_size_title"
        salt:unitsRight=" dp"
        />
    <com.leo.salt.preference.SaltSettingCardPreference/>
    <com.leo.salt.preference.SaltSettingCategoryPreference android:title="@string/qs_devinfo" />
    <com.leo.salt.preference.SaltSettingSwitchPreference
        android:key="device_info_enabled"
        android:title="@string/qs_devinfo_enabled"
        android:defaultValue="false"
        android:summaryOn="@string/on"
        android:summaryOff="@string/off" />
    <com.leo.salt.preference.SaltSettingDefaultListPreference
        android:key="Infoenabledstyle"
        android:title="@string/qs_devinfo_linenumber"
        android:defaultValue="3"
        android:entryValues="@array/device_info_values"
        android:entries="@array/device_info_entries"/>
    <com.leo.salt.preference.SaltSettingListPreference
        android:title="@string/qs_devinfo_location"
        android:key="device_info_orientation"
        android:defaultValue="2"
        android:entryValues="@array/data_usage_style_values"
        android:entries="@array/data_usage_style_entries"
        android:dependency="Infoenabledstyle"
        />
    <com.leo.salt.preference.SaltSettingSeekBarPreference
        android:key="Infosize"
        android:title="@string/qs_devinfo_linenumber"
        android:defaultValue="13"
        android:min="8"
        android:max="20"
        salt:interval="1"
        android:summary="@string/seekbar_sumarry"
        salt:unitsLeft="@string/text_size_title"
        salt:unitsRight=" dp"
        />
    <com.leo.salt.preference.SaltSettingCardPreference/>
    <com.leo.salt.preference.SaltSettingCategoryPreference android:title="@string/qs_devinfo_one" android:key="one" >
    <com.leo.salt.preference.SaltSettingDefaultListPreference
        android:dependency="Infoenabledstyle"
        android:key="InfoOnestyle"
        android:title="@string/qs_devinfo_one_style"
        android:defaultValue="0"
        android:entryValues="@array/deviceinfo_style_values"
        android:entries="@array/deviceinfo_style_entries"
        />
    <com.leo.salt.preference.SaltSettingFontPreference
        android:dependency="Infoenabledstyle"
        android:key="device_info_one_font"
        android:title="@string/qs_devinfo_one_font"
        android:defaultValue="0"
        android:entryValues="@array/font_style_values"
        android:entries="@array/font_style_entries"
        />
    <com.leo.salt.preference.SaltSettingColorPickerPreference
        android:dependency="Infoenabledstyle"
        android:title="@string/qs_devinfo_one_color"
        salt:lightnessSlider="true"
        android:defaultValue="0xccfafafa"
        salt:density="12"
        salt:alphaSlider="true"
        android:key="device_info_one_color"/>
    </com.leo.salt.preference.SaltSettingCategoryPreference>
    <com.leo.salt.preference.SaltSettingCardPreference/>
    <com.leo.salt.preference.SaltSettingCategoryPreference android:title="@string/qs_devinfo_two" android:key="two" >
        <com.leo.salt.preference.SaltSettingDefaultListPreference
            android:dependency="Infoenabledstyle"
            android:key="InfoTwostyle"
            android:title="@string/qs_devinfo_two_style"
            android:defaultValue="0"
            android:entryValues="@array/deviceinfo_style_values"
            android:entries="@array/deviceinfo_style_entries"
            />
        <com.leo.salt.preference.SaltSettingFontPreference
            android:key="device_info_two_font"
            android:title="@string/qs_devinfo_two_font"
            android:defaultValue="0"
            android:entryValues="@array/font_style_values"
            android:entries="@array/font_style_entries"
            />
        <com.leo.salt.preference.SaltSettingColorPickerPreference
            android:dependency="Infoenabledstyle"
            android:title="@string/qs_devinfo_two_color"
            salt:lightnessSlider="true"
            android:defaultValue="0xccfafafa"
            salt:density="12"
            salt:alphaSlider="true"
            android:key="device_info_two_color"/>
    </com.leo.salt.preference.SaltSettingCategoryPreference>
    <com.leo.salt.preference.SaltSettingCardPreference/>
    <com.leo.salt.preference.SaltSettingCategoryPreference android:title="@string/qs_devinfo_three" android:key="Three"  android:dependency="Infoenabledstyle">
        <com.leo.salt.preference.SaltSettingDefaultListPreference
            android:key="InfoThreestyle"
            android:title="@string/qs_devinfo_three_style"
            android:defaultValue="0"
            android:entryValues="@array/deviceinfo_style_values"
            android:entries="@array/deviceinfo_style_entries"
            />
        <com.leo.salt.preference.SaltSettingFontPreference
            android:key="device_info_three_font"
            android:title="@string/qs_devinfo_three_font"
            android:defaultValue="0"
            android:entryValues="@array/font_style_values"
            android:entries="@array/font_style_entries"
            />
        <com.leo.salt.preference.SaltSettingColorPickerPreference
            android:title="@string/qs_devinfo_three_color"
            salt:lightnessSlider="true"
            android:defaultValue="0xccfafafa"
            salt:density="12"
            salt:alphaSlider="true"
            android:key="device_info_three_color"/>
    </com.leo.salt.preference.SaltSettingCategoryPreference>
    <com.leo.salt.preference.SaltSettingCardPreference/>
    <com.leo.salt.preference.SaltSettingCategoryPreference android:title="@string/qs_devinfo_four" android:key="Four" android:dependency="Infoenabledstyle">
        <com.leo.salt.preference.SaltSettingDefaultListPreference
            android:key="InfoFourstyle"
            android:title="@string/qs_devinfo_four_style"
            android:defaultValue="0"
            android:entryValues="@array/deviceinfo_style_values"
            android:entries="@array/deviceinfo_style_entries"
            />
        <com.leo.salt.preference.SaltSettingFontPreference
            android:key="device_info_four_font"
            android:title="@string/qs_devinfo_four_font"
            android:defaultValue="0"
            android:entryValues="@array/font_style_values"
            android:entries="@array/font_style_entries"
            />
        <com.leo.salt.preference.SaltSettingColorPickerPreference
            android:title="@string/qs_devinfo_four_color"
            salt:lightnessSlider="true"
            android:defaultValue="0xccfafafa"
            salt:density="12"
            salt:alphaSlider="true"
            android:key="device_info_four_color"/>
    </com.leo.salt.preference.SaltSettingCategoryPreference>
    <com.leo.salt.preference.SaltSettingCardPreference/>
    <com.leo.salt.preference.SaltSettingCategoryPreference android:title="@string/qs_devinfo_five" android:key="Five" android:dependency="Infoenabledstyle">
        <com.leo.salt.preference.SaltSettingDefaultListPreference
            android:key="InfoFivestyle"
            android:title="@string/qs_devinfo_five_style"
            android:defaultValue="0"
            android:entryValues="@array/deviceinfo_style_values"
            android:entries="@array/deviceinfo_style_entries"
            />
        <com.leo.salt.preference.SaltSettingFontPreference
            android:key="device_info_five_font"
            android:title="@string/qs_devinfo_five_font"
            android:defaultValue="0"
            android:entryValues="@array/font_style_values"
            android:entries="@array/font_style_entries"
            />
        <com.leo.salt.preference.SaltSettingColorPickerPreference
            android:title="@string/qs_devinfo_five_color"
            salt:lightnessSlider="true"
            android:defaultValue="0xccfafafa"
            salt:density="12"
            salt:alphaSlider="true"
            android:key="device_info_five_color"/>
    </com.leo.salt.preference.SaltSettingCategoryPreference>
</PreferenceScreen>