<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.leo.global.donate.DonateActivity">
<include layout="@layout/toolbar_container"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?MainwindowBG"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <android.support.v4.widget.NestedScrollView
            android:layout_below="@+id/navigation"
            android:id="@+id/nestedScrollView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:fillViewport="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical"


                >

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:layout_marginTop="12dp"
                    card_view:cardBackgroundColor="?attr/cardBackgroundColor"
                    card_view:cardCornerRadius="@dimen/card_view_radius"
                    card_view:cardElevation="@dimen/shadow_height">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="8dp"
                            android:paddingTop="8dp"
                            android:text="@string/donate_why"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/donate_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="180.0dip"
                            android:text="@string/donate_info" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardBackgroundColor="?attr/cardBackgroundColor"
                    card_view:cardCornerRadius="@dimen/card_view_radius"
                    card_view:cardElevation="@dimen/shadow_height"
                    card_view:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"

                        android:padding="12dp"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="8dp"
                            android:paddingTop="8dp"
                            android:text="@string/alipay_wechat"
                            android:textSize="16sp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
android:id="@+id/wei_zhi"

                        >
                        <TextView
                            android:textSize="18dp"
                            android:layout_gravity="center"
                            android:id="@+id/bt_alipay_free"
                            android:drawableLeft="@drawable/ic_zhifubao"
                            android:text="@string/alipay_custom"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content" />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:layout_margin="15dp"
                            android:layout_marginBottom="15dp"
                            android:layout_marginTop="15dp"
                            android:background="#AE9B9B9B" />
                        <TextView
                            android:textSize="18dp"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:id="@+id/bt_weixin"
                            android:drawableLeft="@drawable/ic_weixin"

                            android:text="@string/wechat_pay" />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:layout_margin="15dp"
                            android:layout_marginBottom="15dp"
                            android:layout_marginTop="15dp"
                            android:background="#AE9B9B9B" />
                    </LinearLayout>
                        <TextView
                            android:textSize="18dp"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:id="@+id/bt_paypal"
                            android:drawableLeft="@drawable/ic_paypal"

                            android:text="Paypal" />
                    </LinearLayout>

                </android.support.v7.widget.CardView>




                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:layout_marginTop="12dp"
                    card_view:cardBackgroundColor="?attr/cardBackgroundColor"
                    card_view:cardCornerRadius="@dimen/card_view_radius"
                    card_view:cardElevation="@dimen/shadow_height">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:padding="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/contact">
                        <Button
                            android:id="@+id/qq_1"
                            style="@style/buttonStyle"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:minWidth="100dp"
                            android:text="QQ临时会话" />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:layout_margin="15dp"
                            android:layout_marginBottom="15dp"
                            android:layout_marginTop="15dp"
                            android:background="#AE9B9B9B" />
                        <Button
                            android:id="@+id/qq_2"
                            style="@style/buttonStyle"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"

                            android:gravity="center"
                            android:minWidth="100dp"
                            android:text="QQ临时会话" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/telegramLayout">

                        <Button
                            android:id="@+id/telegram"
                            style="@style/buttonStyle"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:minWidth="100dp"
                            android:textAllCaps="false"
                            android:text="Telegram" />

                    </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>