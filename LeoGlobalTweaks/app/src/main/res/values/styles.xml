        <item name="android:background">@drawable/roundbtn_tran</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">35dp</item>

    </style>
    <style name="MyDialogStyle" parent="@android:style/Theme.DeviceDefault.Light.Dialog">
