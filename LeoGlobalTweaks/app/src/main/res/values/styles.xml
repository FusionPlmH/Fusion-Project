    <style name="PreferenceFragmentList">
        <item name="android:paddingStart">16.0dip</item>
        <item name="android:paddingEnd">16.0dip</item>
    </style>
    <style name="PreferenceFragmentList.Material" parent="@style/PreferenceFragmentList">
        <item name="android:scrollbars">vertical</item>
        <item name="android:paddingStart">0.0dip</item>
        <item name="android:paddingEnd">0.0dip</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>
    <style name="AppBarLight" parent="ThemeOverlay.AppCompat.ActionBar" >

    </style>

    <style name="ThemeSplash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:dialogTheme">@style/DialogStyleLight</item>
        <item name="android:alertDialogTheme">@style/DialogStyleLight</item>
    </style>
    <style name="DialogStyleLight" parent="@android:style/Theme.DeviceDefault.Light.Dialog">
        <item name="android:windowTitleStyle">@style/DialogTitleStyle</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowMinWidthMajor">95.0%</item>
        <item name="android:windowMinWidthMinor">100.0%</item>
